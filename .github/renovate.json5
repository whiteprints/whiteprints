{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:base",
    "group:monorepos",
    "group:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    "replacements:all",
    "workarounds:all",
    ":configMigration",
    ":pinDevDependencies",
    ":dependencyDashboard"
  ],
  lockFileMaintenance: {
    enabled: true,
    "extends": [
      "group:all"
    ]
  },
  commitMessageAction: "⬆️",
  packageRules: [
    {
      matchManagers: ["github-actions"],
      matchPaths: [
        "/.github/workflows*.yml"
      ],
      commitMessagePrefix: "ci(dependencies): ",
      commitMessageTopic: "{{depName}}",
      labels: ["dependencies", "ci"]
    },
    {
      matchManagers: ["dockerfile"],
      matchPaths: [
        "/container/Containerfile.*"
      ],
      commitMessagePrefix: "build(docker): ",
      commitMessageTopic: "{{depName}}",
      labels: ["dependencies", "container"]
    },
    {
      matchManagers: ["pep621"],
      matchPaths: [
        "/pyproject.toml"
      ],
      commitMessagePrefix: "build(pyproject.toml): ",
      commitMessageTopic: "{{depName}}",
      labels: ["dependencies"]
    },
    {
      matchManagers: ["regex"],
      matchStrings: [
        "/uv.lock"
      ],
      commitMessagePrefix: "build(uv.lock): ",
      commitMessageTopic: "uv.lock",
      labels: ["dependencies"],
    },
  ]
}

