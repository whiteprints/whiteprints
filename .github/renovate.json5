{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'group:monorepos',
    'group:recommended',
    'replacements:all',
    'workarounds:all',
    'docker:pinDigests',
    'helpers:pinGitHubActionDigests',
    ':pinDependencies',
    ':pinDevDependencies',
    ':configMigration',
    ':dependencyDashboard',
  ],
  lockFileMaintenance: {
    enabled: true,
    extends: [
      'group:all',
    ],
    auto_merge: true
  },
  packageRules: [
    {
      matchManagers: [
        'github-actions',
      ],
      commitMessagePrefix: 'ci(dependencies): 👷',
      commitMessageTopic: '{{depName}}',
      labels: [
        'dependencies',
        'ci',
      ],
      auto_merge: true
    },
    {
      matchManagers: [
        'dockerfile',
      ],
      commitMessagePrefix: 'build(container): 📦',
      commitMessageTopic: '{{depName}}',
      labels: [
        'dependencies',
        'container',
      ],
      auto_merge: true
    },
    {
      matchManagers: [
        'pep621',
      ],
      matchFileNames: [
        'pyproject.toml',
      ],
      commitMessagePrefix: 'build(dependencies): ⬆️',
      commitMessageTopic: '{{depName}}',
      labels: [
        'dependencies',
      ],
      auto_merge: true
    },
  ],
}
