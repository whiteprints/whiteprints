{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'group:monorepos',
    'group:recommended',
    'docker:pinDigests',
    'helpers:pinGitHubActionDigests',
    'replacements:all',
    'workarounds:all',
    ':configMigration',
    ':pinDevDependencies',
    ':dependencyDashboard',
  ],
  lockFileMaintenance: {
    enabled: true,
    extends: [
      'group:all',
    ],
  },
  commitMessageAction: '⬆️',
  packageRules: [
    {
      matchManagers: [
        'github-actions',
      ],
      matchFileNames: [
        '/.github/workflows*.yml',
      ],
      commitMessagePrefix: 'ci(dependencies): ',
      commitMessageTopic: '{{depName}}',
      labels: [
        'dependencies',
        'ci',
      ],
    },
    {
      matchManagers: [
        'dockerfile',
      ],
      matchFileNames: [
        '/container/Containerfile.*',
      ],
      commitMessagePrefix: 'build(docker): ',
      commitMessageTopic: '{{depName}}',
      labels: [
        'dependencies',
        'container',
      ],
    },
    {
      matchManagers: [
        'pep621',
      ],
      matchFileNames: [
        '/pyproject.toml',
      ],
      commitMessagePrefix: 'build(pyproject.toml): ',
      commitMessageTopic: '{{depName}}',
      labels: [
        'dependencies',
      ],
    }
  ],
}
