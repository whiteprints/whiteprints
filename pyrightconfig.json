{
  "strict": ["**"],
  "include": ["src", "tests", "docs"],

  "exclude": [
    "**/node_modules",
    "**/__pycache__",
    "src/experimental",
    "src/typestubs",
    "hatch_build.py"
  ],

  "ignore": [],

  "defineConstant": {
    "DEBUG": true
  },

  "stubPath": "./src/stubs",

  "reportMissingImports": true,
  "reportMissingTypeStubs": true,

  "pythonVersion": "3.13",
  "pythonPlatform": "All",

  "venvPath": ".",
  "venv": ".venv"
}
